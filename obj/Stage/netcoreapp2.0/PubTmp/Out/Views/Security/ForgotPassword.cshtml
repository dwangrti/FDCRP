@model ASJ.ViewModels.Security.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2>Forgot Password</h2>
            <form asp-controller="Security" asp-action="ForgotPassword" method="post" class="form-inline">
                @*<div asp-validation-summary="All"></div>*@
                <input class="form-control" type="email" asp-for="Email" name="Email" id="Email" placeholder="Email" />
                <input class="btn btn-primary" type="submit" value="Submit" />
                <div><span asp-validation-for="Email" class="text-danger"></span></div>                
            </form>
        </div>
    </div>
</div>

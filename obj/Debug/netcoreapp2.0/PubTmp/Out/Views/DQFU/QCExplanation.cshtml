@model ASJ.ViewModels.Client.QCExplanationViewModel
@{
    ViewData["Title"] = "Quality Control Error Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">  
            <h2> </h2>
            <h2>Agency Reasons </h2>
            <h4>@Model.Instrument.Name</h4>
            <p><a href="@Url.Action("AgencyProfile", "Client", new { id =  @Model.OrganizationId })">@Model.Agency </a> <br />    @Model.OrganizationId</p>
            <p></p>

            @if (Model.ExplanationsList.Count == 0)
            {
                <p>No Explanation Found</p>
            }
            else
            {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                Question
                            </th>
                            <th>
                                Reason @Model.Instrument.Year
                            </th>
                            <th>
                                Reason  @(Model.Instrument.Year-1)
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var explanation in Model.ExplanationsList)
                        {
                            <tr>
                                <td>@explanation.QuestionId</td>
                                <td>@explanation.Explananation</td>
                                <td>@explanation.PrevExplananation</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            }
        </div><!--end .col-sm-12-->
    </div><!--end row-->
</div><!--end container-->

@model ASJ.ViewModels.Event.EventsTrackerViewModel
@{
    ViewData["Title"] = "New Agency";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
  .form-group {
      margin-bottom: 20px;
      margin-left: 20px;
      width: 45%;
      float: left;
      text-align: left;
  }
  #submitBtn {
      margin: 20px auto 0;
      display: block;
      font-size: 14px;
  }
  .input-lg {
      border-radius: 0; 
      width: 100%; 
      min-width: 200px;
      font-size: 14px;
  }
  select.input-lg { border: 1px solid #999;}
  #form_container {
    background-color: #fff;
    max-width: 800px;
    min-width: 280px;
    margin: 50px auto 10px;
    padding: 20px 20px 0;
    color: #858b8e;
    box-shadow: 6px 6px 6px rgba(0,0,0,0.2);
    border: 1px solid #858b8e;
  }
</style>

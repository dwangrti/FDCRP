@model ASJ.ViewModels.Security.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Reset Password</h3>

            <form asp-controller="Security" asp-action="ResetPassword" method="post">
                <div asp-validation-summary="All"></div>

                <input asp-for="Code" type="hidden" />
                <input type="text" class="input-medium" asp-for="Email" placeholder="Email" /><br />
                <input type="password" class="input-medium" asp-for="Password" placeholder="Password" /><br />
                <input type="password" class="input-medium" asp-for="ConfirmPassword" placeholder="Confirm Password" /><br />
                <input class="btn btn-primary" type="submit" value="Reset" />
            </form>
        </div>
    </div>
</div>

@model ASJ.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Home Page";
    if (Context.Request.Host.Host.Contains("jailsurvey"))
    {
        Layout = "~/Views/Shared/_LayoutPublicCogTest.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutPublic.cshtml";
    }
}
<div class="display-table">
    <div class="display-table-cell vertical-align-middle">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4 col-md-push-7 col-lg-push-8 col-sm-push-7">
                    <!-- login form -->
                    <form asp-controller="Home" asp-action="Login" method="post" asp-antiforgery="true" class="sky-form boxed">

                        <!-- ALERT -->
                        @if (Model.LoginErrors != null)
                        {
                            <div class="alert alert-mini alert-danger mb-30">@Model.LoginErrors</div>
                        }
                        <!-- /ALERT -->

                        <header><i class="fa fa-users"></i> Log In</header>

                        <fieldset class="m-0">

                            <label class="label mt-20">Username</label>
                            <label class="input">
                                <i class="ico-append fa fa-user-circle"></i>
                                <input type="text" asp-for="Username">
                                <span class="tooltip tooltip-top-right">Your Username</span>
                            </label>
                            <span asp-validation-for="Username"></span>

                            <label class="label mt-20">Password</label>
                            <label class="input">
                                <i class="ico-append fa fa-lock"></i>
                                <input type="password" asp-for="Password">
                                <b class="tooltip tooltip-top-right">Your Password</b>
                            </label>
                            <span asp-validation-for="Password"></span>

                        </fieldset>

                        <footer class="clearfix">
                            <button type="submit" class="btn btn-primary rad-0 float-right"><i class="fa fa-check"></i> LOG IN</button>
                            <div class="login-forgot-password float-left" style="display:none;">
                                <a href="page-password.html">Forgot password?</a>
                            </div>
                        </footer>
                    </form>
                    <!-- /login form -->
                </div>

                <!--begin info-->
                <div class="col-xs-12 col-md-7 col-sm-7 col-lg-8 col-lg-pull-4 col-md-pull-5 col-sm-pull-5">
                    <!--Switch based on Cog/ASJ-->
                    @if (Context.Request.Host.Host.Contains("jailsurvey"))
                    {
                        @Html.Partial("~/Views/Shared/_loginTextCognitive.cshtml");
                    }
                    else
                    {
                        @Html.Partial("~/Views/Shared/_loginTextASJ.cshtml");
                    }

                    @*<ul class="list-unstyled login-features">
                        <li>
                            <i class="glyphicon glyphicon-list-alt"></i> <strong><a href="https://www.icpsr.umich.edu/icpsrweb/ICPSR/series/7" target="_blank">Data Archive</a></strong>
                        </li>
                        <li>
                            <i class="glyphicon glyphicon-duplicate"></i> <strong><a href="https://www.bjs.gov/index.cfm?ty=pbse&sid=38" target="_blank">BJS Reports</a></strong>
                        </li>
                    </ul>*@
                </div>
            </div><!--end row-->
        </div>
    </div>
</div>

